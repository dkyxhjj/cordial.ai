{
  "manifest_version": 3,
  "name": "Cordial Ai - Email Writing Assistant",
  "version": "1.2",
  "description": "Automatically rewrites/drafts your emails with multiple tone options.",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "communication.png",
      "48": "communication.png",
      "128": "communication.png"
    }
  },
  "icons": {
    "16": "communication.png",
    "48": "communication.png",
    "128": "communication.png"
  }
}
